<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizzByMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/teal_700</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="roundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">11dp</item>
        <item name="android:background">@drawable/background_question_image</item>
    </style>
    <style name="Text">
        <item name="android:fontFamily">@font/opensans_condensed_extra_bold_italic</item>
    </style>
    <style name="customProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorButtonNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
    </style>
</resources>